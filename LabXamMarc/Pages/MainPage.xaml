<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Brottsplatskartan"    
             x:Class="LabXamMarc.MainPage">

    <ScrollView>
        <Grid BackgroundColor="Black">
            <ListView x:Name="crimelst" ItemTapped="crimelst_ItemTapped" ItemsSource="{Binding CrimeList}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                            <Frame CornerRadius="20" BackgroundColor="#ccd9ff" Padding="0" Margin="20,12,20,12">
                            <Grid  Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <Label Text="{Binding title_type}" Grid.Row="0" Grid.Column="1" FontSize="Large"/>
                            <Label Text="{Binding title_location}" Grid.Row="1"  Grid.Column="1" FontSize="Medium"/>
                            <Label Text="{Binding date_human}" Grid.Row="2"  Grid.Column="1"  FontSize="Small"/>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    </ScrollView>
</ContentPage>




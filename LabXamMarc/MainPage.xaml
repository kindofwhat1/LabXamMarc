<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Brottsplatskartan"
             x:Class="LabXamMarc.MainPage">

    <StackLayout Margin="15,20,15,0"> <!--Lek mer med margins-->
        <ListView x:Name="crimelst" ItemsSource="{Binding data}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="50" BorderColor="Black" Margin="10" BackgroundColor="#92E2F3">
                            <StackLayout Orientation="Vertical">
                            <Label Text="{Binding title_type}" FontSize="Large"/>
                            <Label Text="{Binding title_location}" FontSize="Small"/>
                            <Label Text="{Binding date_human}" FontSize="Small"/>
                           
                            <!-- Lägg till i details page
                          
                            <Label Text="{Binding title_type}"/>
                            <Label Text="{Binding title_location}"/>
                            <Label Text="{Binding description}"/>
                            <Label Text="{Binding content}"/>
                            <Label Text="{Binding date_human}"/>
                            -->
                        </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>

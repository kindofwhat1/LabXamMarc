<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Brottsplatskartan"
             x:Class="LabXamMarc.MainPage">
    <StackLayout>
        <OnPlatform x:TypeArguments="View">
            <On Platform="Android">
                <StackLayout>

                    <!--Lek mer med margins-->
                    <ListView x:Name="crimelst1" ItemsSource="{Binding CrimeList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <!--<Frame>-->
                                        <StackLayout>
                                        <Label Text="HEJ" />
                                        <Label Text="{Binding title_type}" FontSize="Large"/>
                                            <Label Text="{Binding title_location}" FontSize="Small"/>
                                            <Label Text="{Binding date_human}" FontSize="Small"/>

                                        </StackLayout>
                                    <!--</Frame>-->
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </On>
            <On Platform="UWP">
                <StackLayout Margin="15,20,15,0">

                    <!--Lek mer med margins-->
                    <ListView x:Name="crimelst" ItemsSource="{Binding CrimeList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame CornerRadius="10" BorderColor="Black" Margin="10" BackgroundColor="#92E2F3">
                                        <StackLayout Orientation="Vertical">
                                            <Label Text="{Binding title_type}" FontSize="Large"/>
                                            <Label Text="{Binding title_location}" FontSize="Small"/>
                                            <Label Text="{Binding date_human}" FontSize="Small"/>

                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </On>
        </OnPlatform>
    </StackLayout>
</ContentPage>



